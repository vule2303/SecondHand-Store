@model SecondHand.Models.Domain.Order

@{
    Layout = "_AdminLayout";
}

<div class="card card-danger">
    <div class="card-header">
        <h3 class="card-title" style="color:white">Xoá đơn hàng</h3>
    </div>

    <form method="post">
        <div class="card-body">
            <div>
                <hr />
                <dl class="row">
                    <dt class="col-sm-3">
                        Tình trạng thanh toán
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.PaymentStatus)
                    </dd>
                    <dt class="col-sm-3">
                        Phương thức thanh toán
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.PaymentMethod)
                    </dd>
                    <dt class="col-sm-3">
                        Tình trạng đơn hàng
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.OrderStatus)
                    </dd>
                    <dt class="col-sm-3">
                        Tổng tiền trước khi giảm
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Subtotal)
                    </dd>
                    <dt class="col-sm-3">
                        Giảm giá
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Disscount)
                    </dd>
                    <dt class="col-sm-3">
                        Tổng cộng
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Total)
                    </dd>
                    <dt class="col-sm-3">
                        Ghi chú
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Note)
                    </dd>
                    <dt class="col-sm-3">
                        Ngày tạo
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Created)
                    </dd>
                    <dt class="col-sm-3">
                        Bị hủy
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.IsCancelled)
                    </dd>
                    <dt class="col-sm-3">
                        Id khuyến mãi
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Promotion.Code)
                    </dd>
                    <dt class="col-sm-3">
                        Id Người dùng
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.User.Id)
                    </dd>
                </dl>
            </div>
        </div>

        <div class="card-footer row">
            <input type="hidden" asp-for="Id" />
            <button type="submit" style="width: 150px" class="btn btn-danger">Xoá</button>
            <a asp-action="Index" type="submit" style="width: 150px; margin-left: 10px" class="btn btn-secondary">Trở về</a>
        </div>
    </form>
</div>
