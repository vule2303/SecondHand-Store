@using SecondHand.Models.Domain;
@model List<Category>
@{
    Layout = "_AdminLayout";
}

  <div class=" row">
        <div class="col-12">
            <div class="card ">
            <div class="card-header">
                    <h3 class="card-title" style="margin-top: 6px;">Danh mục sản phẩm</h3>
                <a asp-controller="Category" asp-action="Create" class="card-tools btn bg-gradient-primary">
                    <i class="fa-regular fa-plus fa-2xs"></i> Tạo mới danh mục
                </a>
                </div> 
                <div class=" uk-padding-small col-12">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control " placeholder="Search">
                        <div class="input-group-append">
                            <button type="submit"  class="btn btn-default">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                </div>     
                <div class="card-body table-responsive p-0">
         
        
                    <table class="table table-hover text-nowrap">
                        
                        <thead>
                            <tr>
                                <th>ID</th>

                                <th>Tên</th>           

                                <th>Ngày tạo</th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach(var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>                              
                                <td>@item.Created?.ToString("dd-MM-yyyy")</td>
                                <td><a class="btn btn-info" asp-controller="Category" asp-action="Update" asp-route-id="@item.Id"><i class="fa-regular fa-pen-to-square" style="color: #ffffff;"></i> Cập nhật</a></td>
                                <td><a class="btn btn-danger" asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id"><i class="fa-regular fa-trash-can" style="color: #ffffff;"></i> Xoá</a></td>

                            </tr>
                        }                                                 
                        </tbody>
                    </table>
                </div>

            </div>

        </div>
    </div>
