
@model IEnumerable<SecondHand.Models.Domain.Product>
@{

}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<section class="section-products">
	<div class="container">
		<div class="row">
			<div class="col-md-8 col-lg-6">
				<div class="header">
					<h2>Gợi ý cho bạn</h2>
				</div>
			</div>
		</div>
		<div class="row">
	@foreach (var item in Model)
		{
                    <div class="col-lg-3 col-sm-6 d-flex flex-column align-items-center justify-content-center product-item my-3">
                    <div class="product uk-card">
                        <a class="tm-media-box uk-padding-remove" asp-controller="ProductDetails">
                            @if (item.productGallery != null)
                            {
                                <img src="@Url.Content("~/images/products/" + item.productGallery.Select(p=>p.URL).FirstOrDefault())" alt="@item.Name" />
                            }
                            else
                            {
                                <!-- Hiển thị một hình ảnh mặc định nếu không có hình ảnh -->
                                <img src="~/images/SweaterNike.jpg" alt="Không có hình ảnh" />
                            }
                        </a>

                            <ul class="d-flex align-items-center justify-content-center list-unstyled icons">
                                <li class="icon"><span class="fas fa-expand-arrows-alt"></span></li>
                                <li class="icon mx-3"><span class="far fa-heart"></span></li>
                                <li class="icon"><span class="fas fa-shopping-bag"></span></li>
                            </ul>
                        </div>
                        <div class="tag bg-red">sale</div>

                    <a class="title pt-4 pb-1" asp-controller="ProductDetails" >@item.Name</a>
                    <a class="size" asp-controller="ProductDetails">Size @item.Size</a>
                    <a class="price" asp-controller="ProductDetails">@item.Price VNĐ</a>
                    </div>

            }
		</div>
	</div>
</section>

