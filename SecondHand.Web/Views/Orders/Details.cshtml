@model SecondHand.Models.Domain.Order

@{
    ViewData["Title"] = "Chi tiết đơn hàng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card card-secondary">
    <div class="card-header">
        <h3 class="card-title" style="color:white">Chi tiết đơn hàng</h3>
    </div>

    <div class="card-body">
        <hr />
        <dl class="row">
            <dt class="col-sm-3">
                Tình trạng thanh toán
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.PaymentStatus)
            </dd>
            <dt class="col-sm-3">
                Phương thức thanh toán
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.PaymentMethod)
            </dd>
            <dt class="col-sm-3">
                Tình trạng đơn hàng
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.OrderStatus)
            </dd>
            <dt class="col-sm-3">
                Tổng tiền trước khi giảm 
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Subtotal)
            </dd>
            <dt class="col-sm-3">
                Giảm giá
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Disscount)
            </dd>
            <dt class="col-sm-3">
                Tổng cộng
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Total)
            </dd>
            <dt class="col-sm-3">
                Ghi chú
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Note)
            </dd>
            <dt class="col-sm-3">
                Ngày tạo
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Created)
            </dd>
            <dt class="col-sm-3">
                Bị hủy
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.IsCancelled)
            </dd>
            <dt class="col-sm-3">
                Id khuyến mãi
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Promotion.Code)
            </dd>
            <dt class="col-sm-3">
                Id Người dùng
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.User.Id)
            </dd>
        </dl>
    </div>

    <div class="card-footer row">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary" style="width: 150px">Cập nhật</a>
        <a asp-action="Index" class="btn btn-secondary" style="width: 150px; margin-left: 10px">Trở về</a>
    </div>
</div>
