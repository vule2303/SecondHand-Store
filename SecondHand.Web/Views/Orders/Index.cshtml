@model IEnumerable<SecondHand.Models.Domain.Order>
@{
    ViewData["Title"] = "Index";
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title" style="margin-top: 6px;">Danh sách đơn hàng</h3>
                <a asp-action="Create" class="card-tools btn bg-gradient-primary">
                    <i class="fa-regular fa-plus fa-2xs"></i> Tạo đơn hàng mới
                </a>
            </div>
            <div class="uk-padding-small col-12">
                <div class="input-group input-group-sm" style="width: 150px;">
                    <input type="text" name="table_search" class="form-control" placeholder="Search">
                    <div class="input-group-append">
                        <button type="submit" class="btn btn-default">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
            </div>
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Tình trạng thanh toán</th>
                            <th>Phương thức thanh toán</th>
                            <th>Tình trạng đơn hàng</th>
                            <th>Tổng tiền trước giảm giá</th>
                            <th>Giảm giá</th>
                            <th>Tổng tiền</th>
                            <th>Ghi chú</th>
                            <th>Ngày tạo</th>
                            <th>Đã hủy</th>
                            <th>Mã khuyến mãi</th>
                            <th>ID Người dùng</th>
                            <th></th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                <td>@Html.DisplayFor(modelItem => item.PaymentStatus)</td>
                                <td>@Html.DisplayFor(modelItem => item.PaymentMethod)</td>
                                <td>@Html.DisplayFor(modelItem => item.OrderStatus)</td>
                                <td>@Html.DisplayFor(modelItem => item.Subtotal)</td>
                                <td>@Html.DisplayFor(modelItem => item.Disscount)</td>
                                <td>@Html.DisplayFor(modelItem => item.Total)</td>
                                <td>@Html.DisplayFor(modelItem => item.Note)</td>
                                <td>@Html.DisplayFor(modelItem => item.Created)</td>
                                <td>@Html.DisplayFor(modelItem => item.IsCancelled)</td>
                                <td>
                                    @if (item.Promotion != null)
                                    {
                                        @Html.DisplayFor(modelItem => item.Promotion.Code)
                                    }
                                </td>
                                <td>@Html.DisplayFor(modelItem => item.User.Id)</td>
                                <td>
                                    <a class ="btn btn-info" asp-action="Edit" asp-route-id="@item.Id"><i class="fa-regular fa-pen-to-square" style="color: #ffffff;"></i> Cập nhật</a>
                                   
                                </td>
                                 <td>
                                    <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.Id"><i class="fa-regular fa-trash-can" style="color: #ffffff;"></i> Chi tiết</a> |
                                </td>
                                 <td>
                                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="fa-regular fa-trash-can" style="color: #ffffff;"></i> Xoá</a>
                                    </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
