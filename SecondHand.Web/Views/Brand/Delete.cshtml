@model SecondHand.Models.Domain.Brand

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Delete Brand</h1>

<h3>Are you sure you want to delete this?</h3>
<div class=" container" style="margin: 10px">
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Logo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Logo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
    <br />
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input style="margin-right:4px" type="submit" value="Delete" class="btn btn-danger" /> ||
        <input asp-action="Index" type="submit" value="Cancel" class="btn btn-secondary" />

    </form>
</div>


@section Scripts {
    @{

        <partial name="_ValidationScriptsPartial" />
    }
}
