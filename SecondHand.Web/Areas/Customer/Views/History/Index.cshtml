
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@600&family=Gabarito&family=Handjet:wght@200;300&family=Montserrat+Alternates:ital,wght@0,500;1,200;1,400;1,500&family=Philosopher:ital@1&display=swap" rel="stylesheet">

@using SecondHand.Models.Domain;
@model IEnumerable<Order>

<h1><strong>Lịch sử đơn hàng</strong></h1>

<table class="table">
    <thead>
        <tr>
            <th>ID đơn hàng</th>
            <th>Tên Người Dùng</th>
            <th>Trạng Thái</th>
            <th>Ngày đặt</th>
            <th>Address</th>
            <th>SĐT</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.User.LastName  @order.User.FirstName</td>
                <td>@order.PaymentStatus</td>
                <td>@order.User.Created</td>
                <td>@order.Address</td>
                <td>@order.User.PhoneNumber</td>
                <td>@order.Subtotal</td>
            </tr>
        }
    </tbody>
</table>
<style>
    h1,th {
        font-family: 'Cormorant Garamond', serif;
        font-family: 'Gabarito', cursive;
        font-family: 'Handjet', cursive;
        font-family: 'Montserrat Alternates', sans-serif;
        font-family: 'Philosopher', sans-serif;
    }
</style>
