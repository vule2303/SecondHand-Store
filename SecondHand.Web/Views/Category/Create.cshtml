@using SecondHand.Models.Domain;
@model Category

@{
    Layout = "_AdminLayout";
}
<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title" style="color:white">Tạo mới danh mục sản phẩm</h3>
    </div>


    <form method="post">
        <div class="card-body">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name"  type="text" class="form-control" id="exampleInputText" placeholder="Tên">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>    
            <div class="form-group">
                <input asp-for="Created" type="hidden" class="form-control" id="exampleInputText" placeholder="Tên" value="@DateTime.Now">
            </div>           
        </div>
        <div class="card-footer row">
            <button type="submit" style="width: 150px" class="btn btn-primary">Tạo mới</button>
            <a asp-controller ="Category" asp-action ="Index" type="submit" style="width: 150px; margin-left: 10px" class="btn btn-secondary ">Trở về</a>
        </div>
    </form>
</div>
@section Scripts {@{

    <partial name="_ValidationScriptsPartial"/>
}
}