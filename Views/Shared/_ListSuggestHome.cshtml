@using SecondHand.Models.Domain;



<section class="uk-section uk-section-small uk-padding-remove">
    <div class="uk-container">
        <h2 class="uk-margin-bottom">Gợi ý cho bạn</h2>
        <div class="uk-card uk-card-default tm-ignore-container">
            <div class="uk-grid-collapse uk-child-width-1-3 uk-child-width-1-5@m tm-products-grid"
                 uk-grid>
                <article class="tm-product-card">
                    <div class="tm-product-card-media">
                        <div class="tm-ratio tm-ratio-4-3">
                            <a class="tm-media-box uk-padding-remove"
                               href="product.html">
                                <figure class="tm-media-box-wrap">
                                    <img src="https://cdn.shopify.com/s/files/1/1754/6207/files/651d8dd3-82b6-4335-9aa2-df96ec564565_640x.jpg.webp?v=1691071967"
                                         alt='Nike T-Shirt' />
                                </figure>
                            </a>
                        </div>
                    </div>
                    <div class="tm-product-card-body">
                        <div class="tm-product-card-info">
                            <div class="uk-text-meta uk-margin-xsmall-bottom">
                                Áo
                            </div>
                            <h3 class="tm-product-card-title">
                                <a class="uk-link-heading"
                                   href="product.html"></a>
                            </h3>
                        </div>
                        <div class="tm-product-card-shop product-mg">
                            <div class="tm-product-card-prices ">
                                <div class="uk-text-meta"></div>
                                <div class="tm-product-card-price">
                                    100.000VNĐ
                                </div>
                            </div>
                            <div class="tm-product-card-add">
                                <div class="uk-text-meta tm-product-card-actions">
                                    <a class="tm-product-card-action js-add-to js-add-to-favorites tm-action-button-active js-added-to"
                                       title="Yêu thích">
                                        <span uk-icon="icon: heart; ratio: .75;"></span><span class="tm-product-card-action-text">
                                            Add to
                                            favorites
                                        </span>
                                    </a>
                                </div>
                                <button class="uk-button uk-button-primary tm-product-card-add-button tm-shine js-add-to-cart">
                                    <span class="tm-product-card-add-button-icon"
                                          uk-icon="cart"></span><span class="tm-product-card-add-button-text">add to cart</span>
                                </button>
                            </div>
                        </div>
                    </div>
                </article>
            </div>
        </div>
        <div class="uk-margin uk-text-center">
            <a class="uk-link-muted uk-text-uppercase tm-link-to-all"
               href="subcategory.html">
                <span>Xem thêm</span><span uk-icon="icon: chevron-right; ratio: .75;"></span>
            </a>
        </div>
    </div>
</section>
