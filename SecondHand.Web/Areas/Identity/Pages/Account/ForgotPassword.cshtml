@page "/quen-mat-khau"
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
    Layout = "_LoginLayout";
}
<div class="row justify-content-center centerDiv">

    <div class="col-xl-10 col-lg-12 col-md-9">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-6 d-none d-lg-block bg-password-image"></div>
                    <div class="col-lg-6">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-2">Bạn quên mật khẩu?</h1>
                                <p class="mb-4">
                                    Nhập email của bạn để đặt lại mật khẩu!
                                </p>
                            </div>
                            <form class="user" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                                <div class="form-floating mb-3">
                                    <input asp-for="Input.Email" class="form-control form-control-user" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                                <button type="submit" class="w-100 btn btn-lg btn-primary btn-user">Đặt lại mật khẩu</button>
                            </form>
                  
                            <hr>
                            <div class="text-center">
                                <a class="text-decoration-none" asp-page="./Login" asp-route-returnUrl="@ViewData["ReturnUrl"]">Đã có tài khoản? Đăng nhập</a>
                            </div>
                            <div class="text-center">
                                <a class="text-decoration-none" asp-page="./Register" asp-route-returnUrl="@ViewData["ReturnUrl"]">Đăng ký tài khoản</a>
                            </div>
                            <div class="text-center">
                                <a class="text-decoration-none" asp-area="Customer" asp-controller="Home" asp-action="Index" asp-route-returnUrl="@ViewData["ReturnUrl"]">Trở về trang chủ</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
