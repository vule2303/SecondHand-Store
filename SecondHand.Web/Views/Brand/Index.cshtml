@using SecondHand.Models.Domain;
@model List<Brand>
@{
    ViewData["Title"] = "Brands";
    Layout = "_Adminlayout";
    var stt = 0;
}



<div class=" row">
    <div class="col-12">
        <div class="card ">
            <div class="card-header">
                <h3 class="card-title" style="margin-top: 6px; font-weight:bold; font-size: 40px">Brands</h3>
                <a asp-controller="Brand" asp-action="Create" class="card-tools btn bg-gradient-primary">
                    <i class="fa-regular fa-plus fa-2xs"></i> Tạo mới thương hiệu
                </a>
            </div>
            <div class=" uk-padding-small col-12">
                <div class="input-group input-group-sm" style="width: 150px;">
                    <input type="text" name="table_search" class="form-control " placeholder="Search">
                    <div class="input-group-append">
                        <button type="submit" class="btn btn-default">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
            </div>
            <div class="card-body table-responsive p-0">

                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Brands</th>
                            <th scope="col">Logo</th>
                            <th scope="col">Descriptions</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var a in Model)
                        {
                            <tr>
                                <td>@(++stt)</td>
                                <td>@(a.Name ?? "Tên không có sẵn")</td>

                                <td><img style="width: 80px; height: 80px;" src="~/images/brands/@a.Logo" alt="@a.Name"></td>
                                <td class="long-text">@(a.Description ?? "Mô tả không có sẵn")</td>
                                <td><a asp-controller="Brand" asp-action="Edit" asp-route-id="@a.Id" class="btn btn-info"><i class="fa-regular fa-pen-to-square" style="color: #ffffff;"></i> Cập nhật</a></td>                               
                                <td> <a asp-controller="Brand" asp-action="Delete" asp-route-id="@a.Id" class="btn btn-danger ml-2"><i class="fa-regular fa-trash-can" style="color: #ffffff;"></i> Xoá</a> </td>                               
                            </tr>
                        }



                    </tbody>
                </table>

              
            </div>

        </div>

    </div>
</div>


