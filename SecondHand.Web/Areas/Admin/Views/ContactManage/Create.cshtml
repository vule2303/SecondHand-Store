@model SecondHand.Models.Domain.Contact

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title" style="color:white">Tạo mới danh mục liên lạc</h3>
    </div>
<div class="row container" style="margin: 10px">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FullName" class="control-label"></label>
                    <input asp-for="FullName" placeholder="Họ và Tên" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" placeholder="congthaifc01@gmail.com" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                    <input asp-for="Phone" placeholder="0123456789" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Message" class="control-label"></label>
                    <input asp-for="Message" placeholder="Lời nhắn" class="form-control" />
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <input asp-action="Index" type="submit" value="Cancel" class="btn btn-secondary" />
            </div>
        </form>
    </div>
</div>



