@using System.Globalization;

@model IEnumerable<SecondHand.Models.Domain.Product>
@{

}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<section class="section-products">
	<div class="container">
		<div class="row">
			<div class="col-md-8 col-lg-6">
				<div class="header">
					<h2>Gợi ý cho bạn</h2>
				</div>
			</div>
		</div>
		<div class="row">
	@foreach (var item in Model)
		{
                    <div class="col-lg-3 col-sm-6 d-flex flex-column align-items-center justify-content-center product-item my-3">
					 <div class="product">
                        <a class="tm-media-box" asp-controller="ProductDetails">
                            @if (item.productGallery != null)
                            {
                                <img src="@Url.Content("~/images/products/" + item.productGallery.Select(p=>p.URL).FirstOrDefault())" alt="@item.Name" />
                            }
                            else
                            {
                                <!-- Hiển thị một hình ảnh mặc định nếu không có hình ảnh -->
                                <img src="~/images/SweaterNike.jpg" alt="Không có hình ảnh" />
                            }
                        </a>
							
                            <div class="d-flex align-items-center justify-content-center list-unstyled icons">
							<button class="button-75 icon mx-3"><span class="fas fa-shopping-bag"></span><span style="margin-left: 4px;">Thêm vào giỏ</span></button>
                            </div>
                        </div>
                        <div class="tag bg-red">sale</div>
						<div class="heart">
							<a href="#"><i class="fa fa-heart-o" id="white-heart"></i></a>
						</div>
						<a class="title pt-4 pb-1" asp-controller="ProductDetails" >@item.Name</a>
						<a class="size" asp-controller="ProductDetails">Size @item.Size</a>
						<a class="price" asp-controller="ProductDetails">@(item.Price.ToString("C", CultureInfo.GetCultureInfo("vi-VN")).Replace(" ", "").Replace(".", ","))</a>
					 </div>

            }
			<div class="col-md-3 col-sm-6 col-xs-6">
				<div class="single-product mb-10 ">
					<div class="product-img img-full">
						<div class="product-lists-item" data-id="1049760523">
							<a href="/account/login" class="btn_action btn btn_favourite"><i class="fa fa-heart-o"></i></a>
						</div>

						<a href="/products/swe-windbreaker-jacket-blue" class="img-loop">

							<img class="visible-xs lazyload" src="//product.hstatic.net/1000344185/product/1_27a299b174f24ab4856a9c92c81ec58f_large.jpg" data-src="//product.hstatic.net/1000344185/product/1_27a299b174f24ab4856a9c92c81ec58f_large.jpg" alt="">

							<img class="hidden-xs lazyload" src="https://product.hstatic.net/1000344185/product/1_27a299b174f24ab4856a9c92c81ec58f.jpg" alt="" data-src="https://product.hstatic.net/1000344185/product/1_27a299b174f24ab4856a9c92c81ec58f.jpg">
							<img class="pro-img2 hidden-xs" src="https://product.hstatic.net/1000344185/product/2_57f29a655fcf4434a41451a36250ca7c.jpg" alt="">

						</a>

						<a href="#" class="product-action btn-quickview-1" data-handle="/products/swe-windbreaker-jacket-blue">
							<ul>
								<li>XEM NHANH</li>

							</ul>
						</a>
					</div>
					<div class="product-content">
						<h2><a href="/products/swe-windbreaker-jacket-blue">SWE WINDBREAKER JACKET - BLUE</a></h2>
						<div class="product-price">

							<span class="onsalex">-9%</span>

							<div class="price-box">


								<span class="price">649,000₫</span>

								<span class="regular-price">590,000₫</span>
							</div>

						</div>
					</div>

				</div>

			</div>
		</div>
	</div>
</section>

